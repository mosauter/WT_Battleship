# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
##################################################GET     /                           @controllers.Application.index()
GET     /battleship                 @controllers.Application.wui(command:String = "1")
GET     /battleship/:command        @controllers.Application.wui(command:String)


GET     /home                       @controllers.Application.home()
GET     /game                       @controllers.Auth.game()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)

#
GET     /about                      controllers.Assets.at(path="/public", file="/about.html")

####################################################GET     /socket                     @controllers.Application.socket(login: String = "dummyName")
GET     /socket                     controllers.Auth.socketAuth()


##from google oAuth:

#Pfad "/" mit home-methode ersetzen spater
GET         /                                 controllers.Auth.index()
GET         /home                             controllers.Application.home()
GET         /loginPage                        controllers.Auth.index()

GET         /facebook/index.html              controllers.Auth.facebookIndex()
GET         /oidc/index.html                  controllers.Auth.oidcIndex()
GET         /protected/index.html             controllers.Auth.protectedIndex()
GET         /jwt.html                         controllers.Auth.jwt()
GET         /rest-jwt/index.html              controllers.Auth.restJwtIndex()
GET         /callback                         @org.pac4j.play.CallbackController.callback()
POST        /callback                         @org.pac4j.play.CallbackController.callback()
GET         /casProxyCallback                 @org.pac4j.play.CallbackController.callback()
POST        /casProxyCallback                 @org.pac4j.play.CallbackController.callback()
GET         /logout                           @org.pac4j.play.ApplicationLogoutController.logout()


