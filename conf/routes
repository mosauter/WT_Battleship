# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page

GET         /                        @controllers.Application.home()
GET         /home                    @controllers.Application.home()
GET         /about                   @controllers.Application.about()

# Page where the game takes place (first as single page app)
GET         /game                    @controllers.Auth.game()
GET         /gol                     @controllers.Application.game(login: String = "DUMM 01")

# Map static resources from the /public folder to the /assets URL path
GET         /assets/*file            controllers.Assets.versioned(path="/public", file: Asset)
GET         /bower/*file             controllers.Assets.versioned(path="/public/bower", file: Asset)

# method to get a socket which is bound to a specific instance of a game, when you are authenticated
GET         /socket                  controllers.Auth.socketAuth()
# method for development needs if you want a socket without a login
GET         /sol                     @controllers.Application.socket(login: String = "dummyName")

# authentication methods
GET         /login                   controllers.Auth.index()

GET         /callback                @org.pac4j.play.CallbackController.callback()
POST        /callback                @org.pac4j.play.CallbackController.callback()
GET         /casProxyCallback        @org.pac4j.play.CallbackController.callback()
POST        /casProxyCallback        @org.pac4j.play.CallbackController.callback()
GET         /logout                  @org.pac4j.play.ApplicationLogoutController.logout()
