# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           @controllers.Application.index()

# Page where the game takes place (first as single page app)
GET     /game                       @controllers.Application.game()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)

# method to get a socket which is bound to a specific instance of a game
GET     /socket                     @controllers.Application.socket(login: String = "dummyName")

