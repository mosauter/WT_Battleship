# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
##################################################GET     /                           @controllers.Application.index()
GET     /battleship                 @controllers.Application.wui(command:String = "1")
GET     /battleship/:command        @controllers.Application.wui(command:String)


GET     /home                       @controllers.Application.home()
GET     /game                       @controllers.Application.game()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)

#
GET     /about                      controllers.Assets.at(path="/public", file="/about.html")

GET     /socket                     @controllers.Application.socket(login: String = "dummyName")


##from google oAuth:

GET         /                                 controllers.Auth.index()
GET         /loginForm                        controllers.Auth.loginForm()
GET         /facebook/index.html              controllers.Auth.facebookIndex()
GET         /facebookadmin/index.html         controllers.Auth.facebookAdminIndex()
GET         /facebookcustom/index.html        controllers.Auth.facebookCustomIndex()
GET         /twitter/index.html               controllers.Auth.twitterIndex()
GET         /form/index.html                  controllers.Auth.formIndex()
GET         /form/index.html.json             controllers.Auth.formIndexJson()
GET         /basicauth/index.html             controllers.Auth.basicauthIndex()
GET         /cas/index.html                   controllers.Auth.casIndex()
GET         /saml/index.html                  controllers.Auth.samlIndex()
GET         /oidc/index.html                  controllers.Auth.oidcIndex()
GET         /protected/index.html             controllers.Auth.protectedIndex()
GET         /jwt.html                         controllers.Auth.jwt()
GET         /dba/index.html                   controllers.Auth.dbaIndex()
POST        /dba/index.html                   controllers.Auth.dbaIndex()
GET         /rest-jwt/index.html              controllers.Auth.restJwtIndex()
GET         /callback                         @org.pac4j.play.CallbackController.callback()
POST        /callback                         @org.pac4j.play.CallbackController.callback()
GET         /casProxyCallback                 @org.pac4j.play.CallbackController.callback()
POST        /casProxyCallback                 @org.pac4j.play.CallbackController.callback()
GET         /logout                           @org.pac4j.play.ApplicationLogoutController.logout()


