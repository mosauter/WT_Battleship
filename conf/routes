# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           @controllers.Application.index()
GET     /battleship                 @controllers.Application.wui(command:String = "1")
GET     /battleship/:command        @controllers.Application.wui(command:String)


GET     /home                       @controllers.Application.home()
GET     /game                       @controllers.Application.game()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)

#
GET     /about                      controllers.Assets.at(path="/public", file="/about.html")

GET     /socket                     @controllers.Application.socket(login: String = "dummyName")

#chat

# Home page # index/chat
GET     /chat                       controllers.Application.chat()
GET     /assets.javascript.ws.js    controllers.Application.wsJs()
GET     /wsInterface                controllers.Application.wsInterface()